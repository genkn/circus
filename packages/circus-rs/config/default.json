/*
 * CIRCUS RS default configuration file
 *
 * ** DO NOT EDIT THIS FILE DIRECTLY! **
 * Instead, add a file named local.json or {ENV}.json in the config directory.
 *
 * For details, see ncde-config page:
 * https://github.com/lorenwest/node-config/wiki/Configuration-Files)
 *
 */
{
	// Path resolver settings.
	"pathResolver": {
		"module": "StaticPathResolver",
		"options": {
			"dataDir": "<path_to_dcm_folder>",
			"useHash": false
		}
	},

	// server port number
	"port": 3000,

	// Log configurations. See log4js-node.
	"logs": [
		{
			"type": "dateFile",
			"filename": "./logs/debug.log",
			"pattern": "-yyyyMMdd.log"
		}
	],

	// DICOM loader
	"dumper": {
		"module": "DicomVoxelDumperAdapter",
		"options": {
			"dumper": "<path_to_\"dicom_voxel_dump\"_executable_file>",
			"bufferSize": 268435456
		}
	},

	// Raw dumper
	"rawDumper": {
		"module": "DicomRawDumper"
	},

	// PNG writer options
	"pngWriter": {
		"module": "PNGWriter_pngjs",
		"options": {}
	},

	"cache": {
		/*
 		 * threshold: upper limit of heap memory size. (in bytes)
 		 *		When object added, cached object will be removed to keep threshold.
 		 *		So this threshold is not strict.
 		 */
		"memoryThreshold": 2147483648
	},
	"authorization": {
		"enabled": false,
	  	"allowFrom": "127.0.0.1",
	  	"expire": 1800
	}
}