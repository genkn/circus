doctype html
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compataible", content="IE=edge")
		meta(name="viewport", content="width=device-width,initial-scale=1")
		script(src="https://code.jquery.com/jquery-2.2.0.min.js")

		link(rel='stylesheet', href='dist/css/iconfont.css')
		link(rel='stylesheet', href='dist/css/browser.css')
		script(src="dist/circus-rs-client.js")

		link(rel='stylesheet', href='voxel-cloud.css')
		script(src="./voxel-cloud.js")

		title CIRCUS RS Demo
	body
		h1 CIRCUS RS DEMO (voxel-cloud)

		.circus-rs-viewer
			.icons
				i.icon.rs-icon-window
				i.icon.rs-icon-ruler
				i.icon.rs-icon-pan
				i.icon.rs-icon-reference-rotate
				i.icon.rs-icon-reference-move
		
				i.icon.rs-dummy-icon-voxel-cloud
				i.icon.rs-icon-brush
				i.icon.rs-icon-eraser
				i.icon.rs-icon-bucket
				i.icon.rs-icon-undo
				i.icon.rs-icon-redo
		
		div(style="clear:both;")
			button(type="button" name="add-new-cloud" value="1")
				Add new cloud
		table
			tr
				td(width=320): canvas#rs-canvas(width=300, height=300)
				td
					div.view-state-canvas-note
						div
							input#pan-zoom(type="range",min="0.1",max="3.0",step="0.1",value="1.0")
							span ： pan/zoom
						div
							input#cam-rotate-x(type="range",min="-180",max="180",step="1",value="0")
							span ： 横
							br
							input#cam-rotate-y(type="range",min="-180",max="180",step="1",value="0")
							span ： 縦
							br
					div.view-state-canvas-note
						table
							tr
								th w-width
								td: input#window-width(type='number',min='0',max='5000', value='2277')
							tr
								th w-level 
								td: input#window-level(type='number',min='0',max='5000', value='138')
							tr
								th scale
								td: input#scale(type='number',min='-20',max='20',value='0')
							tr
								th rot-x
								td: input#rotate-x(type="range",min="-180",max="180",step="1",value="0")
							tr
								th rot-y
								td: input#rotate-y(type="range",min="-180",max="180",step="1",value="0")
							tr
								th rot-z
								td: input#rotate-z(type="range",min="-180",max="180",step="1",value="0")
